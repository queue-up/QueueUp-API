
{
  "name": "QueueUp API",
  "description": "API for QueueUp.",
  "website": "http://queueup.gg",
  "repository": "https://github.com/queue-up/queueup-api",
  "logo": "http://queueup.gg/assets/img/favicon.ico",
  "scripts": {
    "postdeploy": "bundle exec rake db:schema:load db:seed"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "ONESIGNAL_API_KEY": {
      "required": true
    },
    "ONESIGNAL_APP_ID": {
      "required": true
    },
    "PUSHER_APP_ID": {
      "required": true
    },
    "PUSHER_CLUSTER": {
      "required": true
    },
    "PUSHER_KEY": {
      "required": true
    },
    "PUSHER_SECRET": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "RIOT_API_KEY": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "SENTRY_URL": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
